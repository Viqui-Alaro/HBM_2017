<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hansa.com.bo.hbm.MainActivity"
    android:orientation="vertical"
    android:background="#007FFF"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/lyPadre">

    <LinearLayout
        android:id="@+id/lyLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/lblEmpresa"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textSize="19dp"
            android:text="@string/nombreEmpresa"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/usuarios"/>
        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="@string/usuario"
            android:textColorHint="@color/colorText"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyContraseÃ±a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgPassword"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/llave"/>
        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="@string/password"
            android:textColorHint="@color/colorText"
            android:layout_weight="0.01"
            android:inputType="textWebPassword" />
    </LinearLayout>


    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#25B03A"
        android:textColor="@color/colorText"
        android:text="@string/ingresar" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/lblVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="15dp"
        android:textColor="@color/colorText"
        android:layout_marginTop="10dp"
        android:text="Version 1.0.0"
        />

</LinearLayout>
